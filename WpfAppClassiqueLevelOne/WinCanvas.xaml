<Window x:Class="WpfAppClassiqueLevelOne.WinCanvas"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfAppClassiqueLevelOne"
        mc:Ignorable="d"
        Title="WinCanvas" Height="450" Width="800">
    <Canvas >
        <Label Content="Email :" Width="150" />
        <TextBox Width="200" Canvas.Left="180"/>
        <Label Content="Password" Width="150" Canvas.Top="150"/>
        <PasswordBox Canvas.Top="150" Width="200" Canvas.Left="180"/>
    </Canvas>
</Window>
