<Window x:Class="WpfAppClassiqueLevelOne.WinImage"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfAppClassiqueLevelOne"
        mc:Ignorable="d"
        Title="WinImage" Height="450" Width="800" Loaded="Window_Loaded" >
    <DockPanel LastChildFill="True">
        <ToolBar Height="60" x:Name="mainToolbar" DockPanel.Dock="Top">
            <Button x:Name="btnPrevious" Height="40" Width="100" BorderBrush="Black"
                    Margin="5" Content="Previous" Click="btnPrevious_Click" />

            <Button x:Name="btnNext" Height="40" Width="100" BorderBrush="Black"
                    Margin="5" Content="Next"  Click="btnNext_Click"/>
        </ToolBar>

        <Border BorderThickness="2" BorderBrush="Green">
            <Image x:Name="imageHolder" Stretch="Uniform" />
        </Border>
    </DockPanel>
</Window>
